<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".feed.FeedActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feed.create_postFragment">

        <!-- TODO: Update blank fragment layout -->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/create_post_frag_addImage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add"
            app:fabSize="mini"
            app:layout_constraintStart_toEndOf="@+id/create_post_frag_addImageg_tv"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_ahare_tv" />

        <EditText
            android:id="@+id/create_post_frag_freeText_PL"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"

            android:background="@drawable/edit_text_bg"
            android:hint="Type here..."
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="false"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_freeText_tv"
            app:layout_constraintWidth_percent=".8" />

        <EditText
            android:id="@+id/create_post_frag_difficulty"
            android:layout_width="249dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Hard/ Medium/ Easy"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="false"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/create_post_frag_Diff_tv"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_freeText_tv"
            app:layout_constraintWidth_percent=".8" />

        <TextView
            android:id="@+id/create_post_frag_Diff_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="48dp"
            android:text="Difficulty:"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_freeText_PL" />

        <TextView
            android:id="@+id/create_post_frag_addImageg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Image:"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_ahare_tv" />

        <TextView
            android:id="@+id/create_post_frag_ahare_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:text="Share location"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_Diff_tv" />

        <TextView
            android:id="@+id/create_post_frag_freeText_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:text="Free text:"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_TOW_PT" />

        <EditText
            android:id="@+id/create_post_frag_TOW_PT"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Type here..."
            android:paddingLeft="20dp"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_TOW_tv"
            app:layout_constraintWidth_percent=".8" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteY="1dp" />


        <ImageView
            android:id="@+id/editUser_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="createPost_frag_img"
            android:src="@drawable/profile_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.784"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.129" />

        <TextView
            android:id="@+id/create_post_newP_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="New Post"
            android:textColor="@color/white"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.306"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="243dp" />

        <TextView
            android:id="@+id/create_post_frag_TOW_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:text="Type of workout:"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/create_post_frag_addIlocation_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="171dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add"
            app:fabSize="mini"
            app:layout_constraintStart_toEndOf="@+id/create_post_frag_ahare_tv"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_Diff_tv" />


        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteX="-40dp"
            tools:layout_editor_absoluteY="653dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/create_post_frag_post_btn"
            android:layout_width="199dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_bg"
            android:text="Post"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_addImageg_tv"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/post_camera_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toTopOf="@+id/create_post_frag_post_btn"
            app:layout_constraintEnd_toStartOf="@+id/create_post_frag_addImage_btn"
            app:layout_constraintHorizontal_bias="0.221"
            app:layout_constraintStart_toEndOf="@+id/create_post_frag_addImageg_tv"
            app:layout_constraintTop_toBottomOf="@+id/create_post_frag_ahare_tv"
            app:layout_constraintVertical_bias="0.272"
            app:srcCompat="@android:drawable/ic_menu_gallery" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
